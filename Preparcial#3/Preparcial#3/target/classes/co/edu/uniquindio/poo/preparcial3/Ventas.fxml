<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.preparcial3.VentasViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TextField fx:id="txtFecha" prefHeight="25.0" prefWidth="321.0" />
                  <ComboBox fx:id="comboCliente" prefWidth="150.0" />
                  <ComboBox fx:id="comboProducto" prefWidth="150.0" />
                  <Spinner fx:id="spinnerCantidad" />
                  <Button fx:id="btnGuardar" mnemonicParsing="false" text="Guardar" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="tablaItems" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="colProducto" prefWidth="75.0" text="Producto" />
                      <TableColumn fx:id="colCantidad" prefWidth="75.0" text="Cantidad" />
                        <TableColumn fx:id="colTotal" prefWidth="75.0" text="Total" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
